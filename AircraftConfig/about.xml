<!-- PA28-161 Aircraft Config Dialog -->


<PropertyList>

	<name>aircraft-config-about</name>
	<layout>vbox</layout>
	<pref-width>500</pref-width>

    <group>
        <layout>hbox</layout>
        <text>
            <halign>left</halign>
            <label>Development Team</label>
        </text>
        <button>
            <halign>right</halign>
            <pref-width>20</pref-width>
            <pref-height>20</pref-height>
            <legend>X</legend>
            <key>Esc</key>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
	
    <hrule/>
	
		<group>
			<layout>vbox</layout>
			
			<text>
				<halign>left</halign>
				<label>PA28-161 Warrior II by Gerhard Kick (gkick) and Joshua Davidson (it0uchpods)</label>
			</text>
			
			<hrule/>
			
			<text>
				<halign>left</halign>
				<label>Systems: Joshua Davidson (it0uchpods)</label>
			</text>
			<text>
				<halign>left</halign>
				<label>Cockpit: Joshua Davidson (it0uchpods), Gerhard Kick (gkick)</label>
			</text>
			<text>
				<halign>left</halign>
				<label>Instruments: Joshua Davidson (it0uchpods), Gerhard Kick (gkick)</label>
			</text>
			<text>
				<halign>left</halign>
				<label>Documentation: Gerhard Kick (gkick)</label>
			</text>

			<text>
				<halign>left</halign>
				<label>Pre V1.0, Shared Libraries 1.4.5</label>
			</text>
			
		</group>
		
	    <hrule/>
	
		<group>
			<layout>hbox</layout>
			
			<button>
				<halign>center</halign>
				<legend>Close</legend>
				<pref-width>210</pref-width>
				<binding>
					<command>dialog-close</command>
				</binding>
			</button>
		</group>
	
</PropertyList>
