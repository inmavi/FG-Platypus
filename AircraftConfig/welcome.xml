<!-- PA28-161 Aircraft Config Dialog -->

<PropertyList>

	<name>aircraft-config-welcome</name>
	<layout>vbox</layout>
	<x>920</x>
	<y>461</y>
    <group>
        <layout>hbox</layout>
        <text>
            <halign>left</halign>
            <label>Welcome!</label>
        </text>
        <button>
            <halign>right</halign>
            <pref-width>20</pref-width>
            <pref-height>20</pref-height>
            <legend>X</legend>
            <key>Esc</key>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
	
    <hrule/>
	
		<group>
			<layout>vbox</layout>
			
			<text>
				<halign>center</halign>
				<label>Welcome to the PA28-161 Warrior II FGNavigator!</label>
			</text>
			<text>
				<halign>center</halign>
				<label>This is a complex simulation of this amazing Piper Aircraft.</label>
			</text>
			<text>
				<halign>center</halign>
				<label>It currently is still under development, and therefore is not complete yet.</label>
			</text>
			<text>
				<halign>center</halign>
				<label>Use the Aircraft Config to manage panel states, and more!</label>
			</text>
			

			<text>
				<halign>center</halign>
				<label>Please WAIT for the Splash to clear! Enjoy!</label>
				<visible>
         		<equals>
            			<property>/sim/sceneryloaded</property>
					<value>false</value>
         		</equals>
      		</visible>			
				<color>
					<red>0.9</red>
					<green>0.9</green>
					<blue>0.1</blue>
					<alpha>1</alpha>
				</color>
			</text>
			
		</group>
		
	    <hrule/>
			<group>
		<layout>hbox</layout>
	
		<checkbox>
			<label>Enable Welcome and Startup Options</label>
			<halign>center</halign>
			<property>/systems/welcome-enabled</property>
			<binding>
				<command>property-toggle</command>
				<property>systems/welcome-enabled</property>
			</binding>
			<binding>
				<command>dialog-apply</command>
			</binding>			
			<live>true</live>
		</checkbox>		
	</group>

		<hrule/>

		<group>
			<layout>hbox</layout>
			
			<button>
				<halign>center</halign>
				<legend>Open A/C Config</legend>
				<pref-width>210</pref-width>
				<binding>
					<command>nasal</command>
					<script>
					acconfig.main_dlg.open();
					</script>
				</binding>
				<binding>
					<command>nasal</command>
					<script>
						setprop("/sim/current-view/view-number", "0");

					</script>
				</binding>

				<binding>
					<command>dialog-show</command>
				<dialog-name>eta</dialog-name>
				</binding>
				<binding>
					<command>dialog-show</command>
				<dialog-name>etwatch</dialog-name>
				</binding>
				<binding>
					<command>dialog-show</command>
				<dialog-name>accft</dialog-name>
				</binding>
				
				
				<binding>
					<command>dialog-close</command>
				</binding>
				
			
			</button>
			
		</group>
	
</PropertyList>
