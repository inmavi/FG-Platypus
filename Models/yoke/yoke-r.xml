<PropertyList> 
	<path>yoke.ac</path> 

  <effect>
    <condition>
      <property>/sim/rendering/rembrandt/enabled</property>
    </condition>

    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>Yoke</object-name>
  </effect>

	<animation>
		<type>material</type>
		<object-name>Yoke</object-name>
		<object-name>Stud</object-name>
		<emission>
			<red>0.1</red>
			<green>0.02</green>
			<blue>0.00001</blue>
			<factor-prop>sim/model/material/instruments/factor</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>Yoke</object-name>
		<property>fdm/jsbsim/fcs/pitch-input</property>
		<factor>-0.12</factor>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Yoke</object-name>
		<property>controls/flight/aileron</property>
		<factor>-90.0</factor>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Stud</object-name>
		<condition>
			<not><property>options/show-r-yoke</property></not>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Yoke</object-name>
		<condition>
			<property>options/show-r-yoke</property>
		</condition>
	</animation>
 
 	<animation>
		<type>pick</type>
		<object-name>Yoke</object-name>
		<object-name>Stud</object-name>
		<action>
			<button>0</button>
			<repeatable type="bool">false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>options/show-r-yoke</property>
			</binding>
			<binding>
				<command>nasal</command>
				<script>
				acconfig.writeSettings();
				</script>
			</binding>
		</action>
	</animation>
</PropertyList>
