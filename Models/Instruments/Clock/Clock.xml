<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>Clock.ac</path>

	    <effect>
        <inherits-from>Aircraft/FG-Platypus/Models/Effects/pa28_flashlight</inherits-from>
        <object-name>Face</object-name>
        <object-name>Front</object-name>
        <object-name>Hdg-Knob</object-name>
	   <object-name>OBS-Knob</object-name>
        <object-name>HdgBug</object-name>
    </effect>

  
   <animation>
  <type>scale</type>
  <x-offset>0.9</x-offset>
  <y-offset>0.9</y-offset>
  <z-offset>0.9</z-offset>
 </animation>

  <animation>
    <object-name>Bezel</object-name>
    <object-name>Face</object-name>
    <object-name>Seconds</object-name>
    <object-name>Minutes</object-name>
    <object-name>Hours</object-name>

    <object-name>vitre</object-name>
  </animation>

   <animation>
    <type>pick</type>
    <object-name>Face</object-name>
    <action>
    <button>0</button>
    <repeatable>false</repeatable>
          <binding>
             <command>dialog-show</command>
             <dialog-name>stopwatch-dialog</dialog-name>
          </binding>
     </action>

   <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>timer</tooltip-id>
                <label>Display Stopwatch</label>
            </binding>
        </hovered>
  </animation>

  
  <animation>
    <type>material</type>
    <object-name>Face</object-name>
    <object-name>Seconds</object-name>
    <object-name>Minutes</object-name>
    <object-name>Hours</object-name>
    <emission>
      <red>   1.0 </red>
      <green> 0.2 </green>
      <blue>  0.0 </blue>
      <factor-prop>/sim/model//material/instruments/factor</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Seconds</object-name>
    <property>/sim/time/utc/day-seconds</property>
    <factor>6</factor>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Minutes</object-name>
    <property>/sim/time/utc/day-seconds</property>
    <factor>0.1</factor>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Hours</object-name>
    <property>/sim/time/utc/day-seconds</property>
    <factor>0.008333</factor>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>





