<?xml version="1.0"?>

<PropertyList>

 <path>vsi.ac</path>

    <effect>
        <inherits-from>Aircraft/FG-Platypus/Models/Effects/pa28_flashlight</inherits-from>
        <object-name>Face</object-name>
        <object-name>Front</object-name>
        <object-name>Hdg-Knob</object-name>
	   <object-name>OBS-Knob</object-name>
        <object-name>HdgBug</object-name>
    </effect>


 <animation>
  <type>material</type>
  <object-name>Face</object-name>
  <object-name>Needle</object-name>
  <emission>
   <red>1.0</red>
   <green>0.2</green>
   <blue>0.0</blue>
   <factor-prop>/sim/model/material/instruments/factor</factor-prop>
  </emission>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>Needle</object-name>
  <property>/instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
  <interpolation>
   <entry><ind>  -2000.0</ind><dep>-175.0</dep></entry>
   <entry><ind>  -1500.0</ind><dep>-133.5</dep></entry>
   <entry><ind>  -1000.0</ind><dep> -82.0</dep></entry>
   <entry><ind>   -500.0</ind><dep> -34.5</dep></entry>
   <entry><ind>      0.0</ind><dep>   2.0</dep></entry>
   <entry><ind>    500.0</ind><dep>  37.5</dep></entry>
   <entry><ind>   1000.0</ind><dep>  83.0</dep></entry>
   <entry><ind>   1500.0</ind><dep> 131.0</dep></entry>
   <entry><ind>   2000.0</ind><dep> 170.5</dep></entry>
  </interpolation>     
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
 
  <animation>
    <type>pick</type>
    <object-name>Face</object-name>
    <action>
    <button>0</button>
    <repeatable>false</repeatable>
          <binding>
             <command>property-adjust</command>
             <property>controls/engines/engine/throttle</property>
		<step>-.25</step>            
          </binding>
     </action>
	
		<hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>rpm</tooltip-id>
                <mapping>rpm</mapping>
                <label>VS: %3d</label>
                <property>instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
            </binding>
        </hovered>
  </animation>

</PropertyList>

 

