<?xml version="1.0" encoding="UTF-8" ?>


<PropertyList>
	

	
	<name>fuelstatus</name>
	<layout>hbox</layout>
		<color>
			<alpha>0.8</alpha>
		</color>

	<x>400</x>
	<y>570</y>	

			<text>
			<pref-width>111</pref-width>
			<label>juice</label>         		
				<property>/systems/remains</property>
				<format>Fuel avl: %2.2f gals</format>
				<live>true</live>
				<color>
					<red>1</red>
					<green>1</green>
					<blue>1</blue>
					<alpha>1</alpha>
				</color>
			</text>
			<text>
		<pref-width>105</pref-width>
				<label>fflow</label>
<property>/engines/engine/fuel-flow-gph</property>
				<format>FFlow: %2.2f gph</format>
				<live>true</live>
				<color>
					<red>1</red>
					<green>1</green>
					<blue>1</blue>
					<alpha>1</alpha>
				</color>
			</text>
			<text>
		<pref-width>100</pref-width>
				<label>Approximate Reach</label>
		<property>systems/freach</property>
				<format>Reach: %4d nm</format>
				<live>true</live>
				<color>
					<red>1</red>
					<green>1</green>
					<blue>1</blue>
					<alpha>1</alpha>
				</color>
			</text>			

			<text>
			<pref-width>85</pref-width>
			<label>time </label>
				<property>/systems/ftime</property>
				<format>Time: %2.2f hrs</format>
				<live>true</live>
				<color>
					<red>1</red>
					<green>1</green>
					<blue>1</blue>
					<alpha>1</alpha>
				</color>
			</text>		
						
			<text>
			<pref-width>90</pref-width>
				<label>Nrst. Apt:</label>
				<property>tracking/icao</property>
				<format>Nrst.Apt: %s</format>
				<live>true</live>
				<color>
					<red>1</red>
					<green>1</green>
					<blue>1</blue>
					<alpha>1</alpha>
				</color>
			</text>
			
			<button>
			<pref-width>21</pref-width>
			<pref-height>16</pref-height>
			<legend>...</legend>
					
			<binding>
				<command>nasal</command>
				<script>libraries.apn();</script>
			</binding>
			</button>
		
			<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend>X</legend>
			<keynum>27</keynum>
			
			<binding>
				<command>nasal</command>
				<script>
					if (getprop("/systems/np")== 0 ) {							libraries.nap.close();
						setprop("/systems/np",1);
					}	
				</script>						
			</binding>
			<binding>
				<command>dialog-close</command>
			</binding>

			</button>

</PropertyList>
