<?xml version="1.0"?>

<PropertyList>
  <name>seatpos</name>
  <modal>false</modal>
  <layout>vbox</layout>

  <group>
    <layout>hbox</layout>
    <empty><stretch>1</stretch></empty>
    <text>
      <label>Pilot</label>
    </text>
    <empty><stretch>1</stretch></empty>
    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      <default>1</default>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </button>
  </group>
  <hrule><dummy/></hrule>
  
     

  <group>
    <layout>hbox</layout>
    <default-padding>10</default-padding>
    <group>
      <layout>vbox</layout>
      <default-padding>1</default-padding>
      <text>
        <halign>left</halign>
        <label>SEAT AND VIEW POSITION</label>
      </text>
      <group>
        <layout>vbox</layout>
        <default-padding>0</default-padding>
        <group>
          <layout>hbox</layout>
          <default-padding>5</default-padding>
          <text>
            <halign>left</halign>
            <label>Seat Down-Up</label>
          </text>
          <slider>
            <halign>right</halign>
            <property>sim/current-view/y-offset-m</property>
            <binding>
              <condition>
                <equals>
                  <property>sim/current-view/view-number</property>
                  <value>0</value>
                </equals>
              </condition>
              <command>dialog-apply</command>
            </binding>
            <binding>
              <condition>
                <equals>
                  <property>sim/current-view/view-number</property>
                  <value>0</value>
                </equals>
              </condition>
              <command>nasal</command>
              <script>libraries.seat_pilot_update();</script>
            </binding>
            <min>0.45</min>
            <max>0.55</max>
          </slider>
        </group>

        <group>
          <layout>vbox</layout>
          <default-padding>0</default-padding>
          <group>
            <layout>hbox</layout>
            <default-padding>5</default-padding>
            <text>
              <halign>left</halign>
              <label>Seat Forward-Back</label>
            </text>
            <slider>
              <halign>right</halign>
              <property>sim/current-view/z-offset-m</property>
              <binding>
                <condition>
                  <equals>
                    <property>sim/current-view/view-number</property>
                    <value>0</value>
                  </equals>
                </condition>
                <command>dialog-apply</command>
              </binding>
              <binding>
                <condition>
                  <equals>
                    <property>sim/current-view/view-number</property>
                    <value>0</value>
                  </equals>
                </condition>
                <command>nasal</command>
                <script>libraries.seat_pilot_update();</script>
              </binding>
              <min>2.45</min>
              <max>2.75</max>
            </slider>
          </group>
		</group>

        <group>
          <layout>vbox</layout>
          <default-padding>0</default-padding>
          <group>
            <layout>hbox</layout>
            <default-padding>5</default-padding>
            <text>
              <halign>left</halign>
              <label>View Look Down-Up</label>
            </text>
            <slider>
              <halign>right</halign>
              <property>sim/current-view/pitch-offset-deg</property>
              <binding>
                <condition>
                  <equals>
                    <property>sim/current-view/view-number</property>
                    <value>0</value>
                  </equals>
                </condition>
                <command>dialog-apply</command>
              </binding>
              <binding>
                <condition>
                  <equals>
                    <property>sim/current-view/view-number</property>
                    <value>0</value>
                  </equals>
                </condition>
                <command>nasal</command>
                <script>libraries.seat_pilot_update();</script>
              </binding>
              <min>-20</min>
              <max>-10</max>
            </slider>
          </group>
        </group>
        <group>
          <layout>vbox</layout>
          <default-padding>5</default-padding>
          <button>
            <legend>Reset to defaults</legend>
            <halign>right</halign>
            <binding>
              <condition>
                <equals>
                  <property>sim/current-view/view-number</property>
                  <value>0</value>
                </equals>
              </condition>
              <command>nasal</command>
              <script>libraries.seat_pilot_defaults();</script>
            </binding>
            <binding>
              <command>dialog-update</command>
            </binding>
          </button>
        </group>
      </group>
    </group>
  </group>
  <hrule><dummy/></hrule>

  <group>
    <layout>hbox</layout>
    <button>
      <legend>Close</legend>
      <default>true</default>
      <key>Esc</key>
      <padding>5</padding>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
    
  </group>

</PropertyList>


