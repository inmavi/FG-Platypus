		<text>
			<label> VS:</label>			
		</text>


		<group>
			<layout>hbox</layout>
			<button>
				<pref-height>21</pref-height>
				<pref-width>25</pref-width>
				<legend>&lt;</legend>
				<binding>
					<condition>
						<greater-than>
							   <property>it-autoflight/input/vs</property>

							<value>-1500</value>
						</greater-than>
					</condition>
					<command>property-adjust</command>
					   <property>it-autoflight/input/vs</property>
					<step>-50</step>
					</binding>
					
					</button>
			<text>
		<pref-width>35</pref-width>
				<label>vsa</label>
<property>it-autoflight/input/vs</property>
				<format>%2d</format>
				<live>true</live>				
			</text>

			<button>
				<pref-height>21</pref-height>
				<pref-width>25</pref-width>
				<legend>&gt;</legend>
				<binding>
					<condition>
						<less-than>
							   <property>it-autoflight/input/vs</property>


							<value>1200</value>
						</less-than>
					</condition>
					<command>property-adjust</command>
					   <property>it-autoflight/input/vs</property>


					<step>50</step>
				</binding>
				

			</button>	
		</group>

		<button>			
			<name>HCA</name>
			<legend>HCA</legend>
			<pref-height>21</pref-height>
			<pref-width>45</pref-width>
			<margin>1</margin>

			<binding>			
				<command>property-adjust</command>
				<property>it-autoflight/input/alt-arm</property>
				<value>0</value>
			</binding>

			<binding>			
				<command>property-adjust</command>
				<property>it-autoflight/input/vert</property>
				<value>1</value>
			</binding>	
			<binding>	
				<command>nasal</command>
				<script>setprop("/it-autoflight/input/vs",0);</script>
			</binding>
		</button>

		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend>X</legend>
			<keynum>27</keynum>
			
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>

		
		
	</group>
