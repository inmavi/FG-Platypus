<?xml version="1.0"?>


<PropertyList>
    <name>tprimer</name>
    <layout>vbox</layout>
    <resizable>false</resizable>
    <modal>false</modal>
    <draggable>true</draggable>
	<x>1</x>
	<y>1</y>

    <group>
        <layout>hbox</layout>
        <empty><stretch>true</stretch></empty>
        <text>
            <label>Bank Primer 101</label>
        </text>
        <empty><stretch>true</stretch></empty>
        <button>
            <legend>X</legend>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>

    <hrule/>

    <group>
        <layout>vbox</layout>
        <padding>6</padding>
        <group>
            <layout>vbox</layout>
            <group>
                <layout>hbox</layout>
                <canvas>
                    <name>banking</name>
                    <valign>fill</valign>
                    <halign>fill</halign>
                    <stretch>false</stretch>
                    <pref-width>580</pref-width>
                    <pref-height>200</pref-height>
                    <!--height>200</height-->
                    <nasal>
                        <load>
                            <![CDATA[

                            # you can add your canvas-specific code here
                            # this will get a handle to the parent canvas
                            var my_canvas = canvas.get(cmdarg());

                            var root = my_canvas.createGroup();
                            var path = "Aircraft/PA28-Warrior/dialogs/Bank.jpg";
                            var child = root.createChild("image")
                                .setFile(path)
                                .setSize(580, 200)
                                .setTranslation(2,2);
                            ]]>
                      </load>
                    </nasal>
                </canvas>
            </group>

                <hrule/>

                <group>
                    <layout>hbox</layout>
                    <default-padding>4</default-padding>
                    <textbox>
                    <name>detail</name>
                    <halign>fill</halign>
                    <stretch>true</stretch>
                    <pref-height>400</pref-height>
                    <height>400</height>
                    <pref-width>580</pref-width>
                    <editable>false</editable>
                    <wrap>true</wrap>
                    <live>true</live>
                    <top-line>0</top-line>
                    <property>/sim/bank</property>
                </textbox>

                <empty><stretch>true</stretch></empty>

                </group>
                
            </group>

        </group>
    </group>
    <hrule/>

    <group>
        <layout>hbox</layout>
        <default-padding>6</default-padding>

        
        <button>
            <halign>right</halign>
            <legend>Close</legend>
            <equal>true</equal>
            <key>Esc</key>
            <default>true</default>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
</PropertyList>
